<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net462;net47;net471;net472;netstandard2.0</TargetFrameworks>
    <RepositoryUrl>https://github.com/EddLonzanida/Eml.Mediator.Demo</RepositoryUrl>
    <PackageProjectUrl>https://github.com/EddLonzanida/Eml.Mediator.Demo</PackageProjectUrl>
    <Description>Capture Business-Use-Cases and convert it into modular and highly testable chunk of codes. A combination of Command, Request-Response, Mediator Pattern and Abstract Class Factory pattern.</Description>
    <Copyright>Copyright 2017 (c) EmL Solutions. All rights reserved.</Copyright>
    <PackageTags>Mediator Command Request Response Pattern Eml.Mediator EmL Solutions</PackageTags>
    <Authors>EmL Solutions</Authors>
    <Company>EmL Solutions</Company>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)' == 'net462' or '$(TargetFramework)' == 'net47' or '$(TargetFramework)' == 'net471' or '$(TargetFramework)' == 'net472'">
    <DefineConstants>NETFULL</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard2.0' or '$(TargetFramework)' == 'netcoreapp2.0'">
    <DefineConstants>NETCORE</DefineConstants>
  </PropertyGroup>
  
  <PropertyGroup>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\Eml.Mediator.xml</DocumentationFile>
  </PropertyGroup>
  <PropertyGroup>
    <NoWarn>1701;1702;1705;CS1591</NoWarn>
  </PropertyGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' == 'net462' or '$(TargetFramework)' == 'net47'  or '$(TargetFramework)' == 'net471' or '$(TargetFramework)' == 'net472'">
    <Reference Include="System.ComponentModel.Composition" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Eml.ClassFactory.Contracts" Version="2.1.0.10" />
  </ItemGroup>
</Project>
